<div class="map" style="background-image: url('https://source.unsplash.com/featured/?map')"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A little bit more about this flat</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <h3>Details</h3>
          <div class="flex">
            <div class="flex">
              <i class="fas fa-user-friends"></i>
              <span><%= @flat.number_of_guests %></span>
            </div>
            <div class="flex ml-3">
              <i class="fas fa-coins"></i>
              <span><%= @flat.price_per_night %></span>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
